@page
@model LoginWithRecoveryCodeModel
@{ ViewData["Title"] = "Verificación de codigo de recuperación"; }

<div class="container-fluid">
    <div class="row justify-content-center" style="margin-top: 5%">
        <div class="col-md-4 ">

            <h1>@ViewData["Title"]</h1>
            <hr />
            <p>
                Ha solicitado iniciar sesión con un codigo de recuperación.
                Este inicio de sesión no se recordará hasta que proporcione un código de aplicación de autenticación al iniciar sesión o desactive 2FA y vuelva a iniciar sesión.
            </p>
            <div class="row">
                <div class="col-md-4">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.RecoveryCode"></label>
                            <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Iniciar sesión</button>
                    </form>
                </div>
            </div>
        </div>
        </div>
    </div>

        @section Scripts {
            <link rel="stylesheet" href="~/css/Fondo.css" />
            <partial name="_ValidationScriptsPartial" />
        }
