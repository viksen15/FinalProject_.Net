@page
@model TwoFactorAuthenticationModel
@{
    ViewData["Title"] = "Autenticación de dos pasos";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h4>@ViewData["Title"]</h4>
@if (Model.Is2faEnabled)
{
    if (Model.RecoveryCodesLeft == 0)
    {
        <div class="alert alert-danger">
            <strong>No Le quedan códigos de recuperación.</strong>
            <p>Usted debe <a asp-page="./GenerateRecoveryCodes">generar un nuevo conjunto de códigos de recuperación</a> antes de poder iniciar sesión con un código de recuperación.</p>
        </div>
    }
    else if (Model.RecoveryCodesLeft == 1)
    {
        <div class="alert alert-danger">
            <strong>Le queda 1 código de recuperación.</strong>
            <p>Usted puede <a asp-page="./GenerateRecoveryCodes">generar un nuevo conjunto de códigos de recuperación</a>.</p>
        </div>
    }
    else if (Model.RecoveryCodesLeft <= 3)
    {
        <div class="alert alert-warning">
            <strong>Tiene @Model.RecoveryCodesLeft códigos de recuperación restantes.</strong>
            <p>Debería <a asp-page="./GenerateRecoveryCodes">generar un nuevo conjunto de códigos de recuperación</a>.</p>
        </div>
    }

    if (Model.IsMachineRemembered)
    {
        <form method="post" style="display: inline-block">
            <button type="submit" class="btn btn-default">Olvida este navegador</button>
        </form>
    }
    <a asp-page="./Disable2fa" class="btn btn-default">Desactivar autenticación de dos pasos</a>
    <a asp-page="./GenerateRecoveryCodes" class="btn btn-default">Restablecer códigos de recuperación</a>
}

<h5>Aplicación de autenticación</h5>
@if (!Model.HasAuthenticator)
{
<a id="enable-authenticator" asp-page="./EnableAuthenticator" class="btn btn-default">
    Agregar aplicación de autenticación
</a>
}
else
{
<a id="enable-authenticator" asp-page="./EnableAuthenticator" class="btn btn-default">Configurar la aplicación de autenticación</a>
<a id="reset-authenticator" asp-page="./ResetAuthenticator" class="btn btn-default">Restablecer la aplicación de autenticación</a>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}